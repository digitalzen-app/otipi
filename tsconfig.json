{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
  
    "strict": true, // Enables all strict type checking options
    "noImplicitAny": true, // No expressions and declarations with an implied 'any' type
    "strictNullChecks": true, // No 'null' or 'undefined' unless explicitly declared
    "strictFunctionTypes": true, // Strict function type checking
    "strictPropertyInitialization": true, // Ensure all properties are initialized in the constructor


    "jsx": "preserve",
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
],
  "exclude": [
    "node_modules"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]

}
